{
    "manifest_version": 2,
    "name": "Lazy Orkfian",
    "description": "Builds your barren land based on preset percentages",
    "version": "1.1",
    "author": "Nepherius",
    "homepage_url": "http://nepherius.xyz",
    "browser_action": {
        "default_icon": "images/orkfia.png"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "web_accessible_resources": [
        "options.html"
    ],
    "permissions": [
        "activeTab",
        "storage",
        "https://alliancesatwar.com/*"
    ],
    "content_scripts": [{
        "matches": ["http://alliancesatwar.com/construction*"],
        "css": ["css/ohsnap.css"],
        "js": ["/js/plugins/ohsnap.min.js"],
        "run_at": "document_end"
    }]
}
